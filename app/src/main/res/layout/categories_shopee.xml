<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!-- Categories -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        tools:ignore="MissingConstraints">

        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/pedulilindungi1"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/cellphone"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/shopeesupermarket"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/shopeemall"
                />
        </TableRow>

        <RelativeLayout android:layout_height="19dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="PeduliLindungi"
                android:textSize="7dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="127dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Pulsa, Tagihan &amp; Hiburan"
                android:textSize="7dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="227dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Shopee Supermarket"
                android:textSize="7dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="326dp"
                android:gravity="center"
                android:text="ShopeeMall"
                android:textColor="@color/black"
                android:textSize="7dp" />
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/shopeevoucher" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/shopeegames" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/shopeecod" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/shopeefood" />
        </TableRow>

        <RelativeLayout android:layout_height="19dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Gratis Ongkir & Voucher"
                android:textSize="7dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="127dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="ShopeeGames"
                android:textSize="7dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="227dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Bayar di Tempat"
                android:textSize="7dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="326dp"
                android:gravity="center"
                android:text="ShopeeFood"
                android:textColor="@color/black"
                android:textSize="7dp" />
        </RelativeLayout>
    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>